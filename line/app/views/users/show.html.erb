<div class="col-md-2">
  <div class="panel panel-default">  
    <table class="table table-hover ">
      <tr>
        <th>プロフィール</th>
      </tr>
      <tr>
        <td><%= link_to current_user do %><img src="<%= gravatar_url(current_user, { size:40 }) %>"><%= current_user.name %><% end %></td>
      </tr>
      <tr>
        <th>友だち</th>
      </tr>
      
      <% @users.each do |user| %>
        <% unless user == current_user %>
          <tr>
            <td><%= link_to user do %><img src="<%= gravatar_url(user, { size:40 }) %>"><%= user.name %><% end %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

<div class="col-md-6 text-center">
  <img src="<%= gravatar_url(@user, { size:200 }) %>">
  <h3><%= @user.name %></h3>
  <h3><%= @user.email %></h3>
  <h3><%= link_to "トーク", talk_room_user_path(@user) %></h3>
  <% unless @user == current_user %>
    <h3>友達追加等</h3>
  <% end %>
</div>
