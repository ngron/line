<h1 class="text-center" style=padding:20px 0px>登録</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class:"form-control",placeholder: "名前" %>
      </div>
      
      <div class="form-group">
        <%= f.email_field :email, class:"form-control",placeholder: "メールアドレス" %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password, class:"form-control",placeholder: "パスワード" %>
      </div>
      
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control',placeholder:"パスワード(確認用)" %>
      </div>
      
      <%= f.submit "登録", class:"btn btn-primary btn-block" %>
      <p><%= link_to "ログインはこちら",login_path %></p>
    <% end %>
  </div>
</div>
