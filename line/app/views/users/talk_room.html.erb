<div class="col-md-2">
  <div class="panel panel-default">
    <div class="friend_field">
      <table class="table table-hover">
        <tr>
          <th>トーク</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to "#" do %><img src="<%= gravatar_url(user, { size:40 }) %>"><%= user.name %><% end %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<div class="col-md-8">
  <div class="panel panel-default">
    <div class="talk-room">
      <!--ユーザのやり取りを表示させる-->
      <!--メッセージフォーム-->
    </div>
  </div>
</div>